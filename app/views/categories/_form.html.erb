<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", data: { turbo: false }, local: true) do |f| %>
  <div class="form-group row mt-4">
    <%= f.label :name, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a Category" %>
    </div>
  </div>
    
  <br>
  <div class="form-group row justify-content-center">
    <%= f.submit "Update article", class: "btn btn-outline-light btn-lg botonCE"%>
  </div>

<% end %>